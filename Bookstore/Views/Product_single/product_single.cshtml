@{  Layout = "~/Views/Layout/_main.cshtml";}
@using Bookstore.Models

    <div class="breadcrumb">
        <div class="container">
            <a class="breadcrumb-item" href='@Url.Action("index", "Home")'>Home</a>
            <span class="breadcrumb-item active">Product</span>
        </div>
    </div>
    <section class="product-sec">
    <div class="container">
      
        <div class="row">
            <div class="col-md-6 slider-sec">
                <!-- main slider carousel -->
                <div id="myCarousel" class="carousel slide">
                    <!-- main slider carousel items -->
                    <div class="carousel-inner">
                        <img src='@Url.Content("~/images/"+Model.Image)' />
                    </div>
                   
             
                    
                </div>
                <!--/main slider carousel-->
            </div>
            <div class="col-md-6 slider-content">

                <ul>
                    <li>
                        <span class="name">Product Name</span><span class="clm">:</span>
                        <span class="price">@Model.RecommendBookName </span>
                    </li>

                    <li>
                        <span class="name">Kindle Price</span><span class="clm">:</span>
                        <span class="price final">$@Model.Price</span>
                    </li>
                    <li><span class="save-cost">Save $7.62 (69%)</span></li>
                </ul>
                <div class="btn-sec">
                    <a class="btn" href='@Url.Action("OrderNow", "Cart", new { id = Model.Id }, null)'>Add To cart</a>
                    <button class="btn black">Buy Now</button>
                </div>
            </div>
        </div>
        </div>
</section>
    <section class="related-books">
        <div class="container">
            <h2>You may also like these book</h2>
            <div class="recomended-sec">
                <div class="row">
                    @{
                        foreach (var item in ViewData["recent"] as List<RecommendBook>)
                        {
                            <div class="col-lg-3 col-md-6">
                                <div class="item">
                                    <img src='@Url.Content("~/images/"+item.Image)' />
                                    <h3> @item.RecommendBookName</h3>
                                    <h6><span class="price">$@item.Price</span> / <a href='@Url.Action("product_single", "Product_single")'>Buy Now</a></h6>
                                    <div class="hover">
                                        <a href='@Url.Action("product_single", "Product_single",new { id=item.Id},null)'>
                                            <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
               
                </div>
            </div>
        </div>
    </section>
